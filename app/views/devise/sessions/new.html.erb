<div class="login">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="content">
    <%= f.email_field :email, autofocus: true, placeholder: :email, autocomplete: "email" %>
    <%= f.password_field :password, placeholder: :password, autocomplete: "current-password" %>
    <%= f.submit "Login", class: "login-button" %>

    <% if devise_mapping.rememberable? %>
      <div class="rememberable">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
<% end %>
  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Mail Digests</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_digests.each do |mail_digest| %>
      <tr>
        <td><%= mail_digest.title %></td>
        <td><%= link_to mail_digest do %>
            <i class="fas fa-eye"></i>
          <% end %>
        </td>
        <td><%= link_to edit_mail_digest_path(mail_digest) do %>
            <i class="fas fa-pen-square"></i>
          <% end %>
        </td>
        <td><%= link_to mail_digest, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mail Digest', new_mail_digest_path %>
